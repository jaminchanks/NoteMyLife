<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/menu_top_layout"
    android:layout_height="wrap_content"
    android:background="@color/light_blue1"
    android:orientation="horizontal"
    android:paddingRight="@dimen/paddingRight1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/back_icon"
        android:layout_width="42dp"
        android:layout_height="30dp"
        android:src="@drawable/selector_actionbar_return"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/menu2_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/detail"
        android:textSize="@dimen/top_menu_size"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/menu2_imageview1"
        android:layout_width="42dp"
        android:layout_height="@dimen/top_menu_size" />
</LinearLayout>
