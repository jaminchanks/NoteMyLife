<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/mohu1"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    >
    <TextView
        android:id="@+id/weatherDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15-08-12"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/weatherCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广州"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_alignStart="@id/weatherDate"
        android:layout_alignEnd="@id/weatherDate"
        android:layout_below="@+id/weatherDate" />
    <TextView
        android:id="@+id/weatherType"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="晴"
        android:textSize="32sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/weatherTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25°C"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/weatherTempRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20°C/30°C"
        android:layout_below="@id/weatherTemp"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>