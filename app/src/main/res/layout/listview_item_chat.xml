<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white"
    >

    <!--机器人发送的内容 -->
    <LinearLayout
        android:id="@+id/send_by_robot_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:gravity="left"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/head_robot"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/robot_showdown" />
        <TextView
            android:id="@+id/send_by_robot_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:background="@drawable/selector_chat_dialogbox_otherparty_bg"
            android:lineSpacingExtra="3dip"
            android:maxWidth="232dip"
            android:paddingBottom="5dip"
            android:paddingLeft="12dip"
            android:paddingRight="10dip"
            android:paddingTop="8dip"
            android:text="你你好啊!"
            android:textColor="@color/light_black1"
            android:textSize="16dip" />

    </LinearLayout>


    <!-- 我发送的内容-->
    <LinearLayout
        android:id="@+id/send_by_me_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/send_by_me_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:background="@drawable/selector_chat_dialogbox_me_bg"
            android:lineSpacingExtra="3dip"
            android:maxWidth="232dip"
            android:paddingBottom="5dip"
            android:paddingLeft="8dip"
            android:paddingRight="15dip"
            android:paddingTop="8dip"
            android:text="你你好啊!"
            android:textColor="@color/light_black1"
            android:textSize="16dip" />

        <ImageView
            android:id="@+id/head_me"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/me" />
    </LinearLayout>

</LinearLayout>