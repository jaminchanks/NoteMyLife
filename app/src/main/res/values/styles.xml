    </style> -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- 日志内容的样式-->
    <style name="note_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="note_content">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/deep_gray</item>
    </style>


    <!-- 自定义dialog -->
    <style name="noTitleDialog" parent="android:Theme.NoTitleBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--
        <item name="android:windowBackground">@drawable/content</item>
        -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
